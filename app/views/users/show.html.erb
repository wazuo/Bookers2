<%= render'books/list',user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>本の名前</th>
            <th>感想</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill,100,100, format: 'jpeg',fallback: "no_image.jpg",size: "60x60" %></td>
              <td>
                <%= link_to book_path(book) do%>
                  <%= book.title %>
                <% end%>
              </td>
              <td><%= book.body%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>