<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, local: true do |f| %>
      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do|meassage| %>
          <li><%= meassage %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <div class="form-group">
        <label for="user_name">名前</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_profile_image">「refile」による画像保存用</label>
        <%= f.attachment_field :profile_image, class: "form-control-file user_image"%>
      </div>
      <div class="form-group">
        <label for="user_introduction">自己紹介文</label>
        <%= f.text_area :introduction, class: "form-control introduction"%>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary"%>
      </div>
      <% end %>
    </div>
  </div>
</div>